@model Quanlythuvien.Models.MuonSach
@{
    ViewBag.Title = "TraSach";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main>

    <div class="page-header">
        <div>
            <h1 class="font-weight-bold text-black" style="color:black">Trả sách</h1>
            <small>Trang chủ /Trả sách</small>
        </div>
    </div>

    <div class="page-content borrow-book-infomation">
        <div class="borrow-book-infomation-left">
            @using (Html.BeginForm(Html.BeginForm("TraSach", "Home", FormMethod.Post, new { enctype = "multipart/form-data" })))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                @Html.HiddenFor(model => model.MaPhieu)
                @Html.HiddenFor(model => model.MaNV)

                <fieldset style="width:400px">
                    <legend>Thông tin phiếu mượn</legend>
                    <div class="borrow-book-item">
                        <span>Mã độc giả:</span><br>
                        <input type="text" name="MaDocGia" value="@Model.MaDocGia"><br>
                    </div>
                    <div class="borrow-book-item">
                        <span>Ngày mượn:</span><br>
                        <input type="date" name="NgayMuon" value="@Model.NgayMuon.Value.ToString("yyyy-MM-dd")"><br>
                    </div>
                    <div class="borrow-book-item">
                        <span>Ngày hẹn trả:</span><br>
                        <input type="date" name="NgayHenTra" value="@Model.NgayHenTra.Value.ToString("yyyy-MM-dd")"><br>
                    </div>
                    <div class="borrow-book-item">
                        <span>Ngày lập phiếu:</span><br>
                        <input type="date" name="NgayLapPhieu" value="@Model.NgayLapPhieu.Value.ToString("yyyy-MM-dd")"><br>
                    </div>
                    <div class="borrow-book-item">
                        <span>Mã sách:</span><br>
                        <input type="text" name="MaSach" value="@Model.MaSach"><br>
                    </div>
                </fieldset>
                <button class="btn btn-success btn-borrow-book" style="margin-top: 24px; margin-left: 150px" type="submit">Xóa</button>
            }
        </div>
    </div>
</main>

